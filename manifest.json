{
  "version": "1.0.0",
  "name": "Roar Local",
  "short_name": "Roar Local",
  "description": "See something broken online? Tell the world and get help with Roar! by More Human Internet.",
  "background": {
    "page": "html/background-page.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/roar_19.png",
      "38": "img/roar_38.png"
    },
    "default_popup": "html/popup.html"
  },
  "icons": {
    "128": "img/roar_128.png"
  },
  "manifest_version": 2,
  "permissions": ["<all_urls>", "storage", "tabs", "notifications", "webNavigation"],
  "externally_connectable": {
    "matches": ["https://roar.morehumaninternet.org/*", "https://roar-server.herokuapp.com/*", "https://localhost:5004/*"]
  },
  "web_accessible_resources": []
}
