{
  "name": "roar-extension",
  "version": "1.0.0",
  "description": "Web Extension for ROAR! (Public Feedback Project)",
  "scripts": {
    "build": "npm run clear && node build.js",
    "build:watch": "npm run build -- --watch",
    "clear": "rimraf bundled",
    "lint": "{ find src -name '*.ts' | xargs tslint --project tsconfig.json --config tslint.json ; } && { find src -name '*.ts' -exec grep 'only: true' {} + | { ! grep '^'; } }",
    "publish": "./publish.sh",
    "scss": "sass scss/popup.scss bundled/popup.css",
    "rollup": "rollup --config rollup.config.js",
    "test": "nyc --exclude src/types.ts --exclude src/tests mocha -r src/tests/setup.js -r src/types.ts src/**/*.test.ts*",
    "zip-source-code-for-firefox": "cd .. && find extensions | grep -v 'node_modules' | grep -v '.git' | grep -v 'manifest.json' | grep -v '^extensions/compiled' | grep -v '^extensions/bundled' | grep -v '^extensions/publish' | grep -v '^extensions$' | grep -v '.zip$' | zip -rTg extension-source-code.zip -@ && cd extensions"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morehumaninternet/roar-extension.git"
  },
  "keywords": [],
  "author": "More Human Internet",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/morehumaninternet/roar-extension/issues"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.0",
    "@types/firefox-webext-browser": "67.0.2",
    "draft-js": "0.11.7",
    "emoji-mart": "3.0.0",
    "immutable": "4.0.0-rc.12",
    "konva": "7.1.6",
    "lodash": "4.17.20",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-konva": "17.0.0-0",
    "redux": "4.0.1",
    "spinthatshit": "1.0.4",
    "urijs": "1.19.1",
    "webextension-polyfill": "0.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "16.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "10.0.0",
    "@types/chai": "4.1.7",
    "@types/chrome": "0.0.81",
    "@types/draft-js": "0.10.44",
    "@types/emoji-mart": "3.0.4",
    "@types/fetch-mock": "7.3.3",
    "@types/jsdom": "16.2.5",
    "@types/lodash": "4.14.123",
    "@types/mocha": "5.2.7",
    "@types/react": "16.9.53",
    "@types/sinon": "7.0.13",
    "@types/sinon-chai": "3.2.2",
    "@types/sinon-chrome": "2.2.10",
    "@types/urijs": "1.15.38",
    "atob": "2.1.2",
    "btoa": "1.2.1",
    "chai": "4.2.0",
    "chalk": "4.1.0",
    "concurrently": "5.3.0",
    "fetch-mock": "9.10.7",
    "husky": "4.3.0",
    "jsdom": "16.4.0",
    "mocha": "6.2.0",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "pretty-quick": "3.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.32.1",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-typescript2": "0.29.0",
    "sass": "1.27.1",
    "sinon": "7.3.2",
    "sinon-chai": "3.3.0",
    "sinon-chrome": "3.0.1",
    "source-map-support": "0.5.12",
    "strip-ansi": "6.0.0",
    "tee": "0.2.0",
    "ts-node": "9.0.0",
    "tslint": "5.19.0",
    "tslint-immutable": "6.0.1",
    "typescript": "4.0.3"
  },
  "homepage": "https://github.com/morehumaninternet/roar-extension#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"src/**/*.*(ts|tsx)\""
    }
  }
}
