{
  "version": "4.0.3",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "Node",
    "preserveWatchOutput": false,
    "resolveJsonModule" : true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es6",
    "lib": [
      "es6",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
